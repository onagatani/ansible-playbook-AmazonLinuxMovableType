/var/www/vhosts/*/logs/*log /var/www/movabletype/movableype.log {
    daily
    dateext
    rotate 90
    dateext
    compress
    missingok
    notifempty
    sharedscripts
    postrotate
        /sbin/service httpd graceful > /dev/null 2>/dev/null || true
        /usr/bin/svc -du /service/movabletype > /dev/null 2>/dev/null || true
    endscript
}
